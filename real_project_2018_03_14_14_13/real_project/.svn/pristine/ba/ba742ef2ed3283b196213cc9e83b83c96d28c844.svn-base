    	<table><!-- 댓글 작성 테이블  -->
			<tr>
				<td><textarea id="comment" placeholder="댓글을 등록 해주세요. (2000자 이내)"></textarea></td>
				<td><button onclick="replyInsert(${boarddto.b_idx})">댓글 등록</button></td> <!--로그인 검사 -->
			</tr>
		</table>
